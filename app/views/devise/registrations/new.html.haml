:erb
	<% provide(:bodyclass, "sign-up") %>

.container-fluid.animated.fadeInDown
	%h1 Sign up
	= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
		= devise_error_messages!
		.control-group
			= f.label :email
			= f.email_field :email, :required => true
		.control-group
			= f.label :password
			= f.password_field :password, :autocomplete => "off"
		.form-actions
			.btn-group.for2
				= link_to "Sign In?", new_session_path(resource_name), :class => "btn btn-large"
				= f.submit "Let's Go!", :class => "btn btn-large"
		= link_to "Forgot your password?", new_password_path(resource_name), :class => "btn btn-block"

:javascript
	$("h1").fitText(0.5);
