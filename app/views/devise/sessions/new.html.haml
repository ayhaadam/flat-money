:erb
	<% provide(:bodyclass, "sign-in") %>

.container-fluid.animated.fadeInDown
	%h1 Sign In
	= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
		.control-group
			= f.label :email
			= f.email_field :email
		.control-group
			= f.label :password
			= f.password_field :password
		- if devise_mapping.rememberable?
			.control-group.hidden
				= f.check_box :remember_me, :checked => "checked"
				= f.label :remember_me
		.form-actions
			.btn-group.for2
				= link_to "New Here?", new_registration_path(resource_name), :class => "btn btn-large"
				= f.submit "Let's Go!", :class => "btn btn-large"
		= link_to "Forgot your password?", new_password_path(resource_name), :class => "btn btn-block"

:javascript
	$("h1").fitText(0.5);